{
  "name": "buttnutts-turret-tooling",
  "version": "1.0.0",
  "description": "Euromac & Mate Turret and Tooling Calculator",
  "main": "src/main/main.js",
  "author": "Jonathan",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.3",
    "chokidar": "^3.6.0",
    "write-file-atomic": "^4.0.2"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.buttnutts.turret-tooling",
    "productName": "Buttnutts Turret Tooling",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "data/**/*",
      "!data/backups/*"
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data",
        "filter": [
          "**/*",
          "!backups/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Turret Tooling"
    },
    "publish": {
      "provider": "github",
      "owner": "jonathanca6969-sys",
      "repo": "my-project"
    }
  }
}
