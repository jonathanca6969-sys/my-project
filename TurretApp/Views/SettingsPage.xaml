<Page x:Class="TurretApp.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource BgBrush}">
    <Grid Margin="40,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="&#x2699; SETTINGS" FontSize="22" FontWeight="Bold"
                       Foreground="{StaticResource AccentBrightBrush}"
                       FontFamily="{StaticResource TerminalFont}"/>
            <TextBlock Text="Application configuration" FontSize="13"
                       Foreground="{StaticResource TextMutedBrush}" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Settings Content -->
        <Border Grid.Row="1" Style="{StaticResource SectionPanel}" VerticalAlignment="Top">
            <StackPanel>
                <TextBlock Text="THEME" FontSize="14" FontWeight="SemiBold"
                           Foreground="{StaticResource AccentBrush}" Margin="0,0,0,12"
                           FontFamily="{StaticResource TerminalFont}"/>

                <Button x:Name="BtnThemeToggle" Click="OnThemeToggle"
                        FontSize="16" Padding="24,12" HorizontalAlignment="Left"/>

                <Border Height="1" Background="{DynamicResource BorderBrush}" Margin="0,20,0,20"/>

                <TextBlock Text="TURRET" FontSize="14" FontWeight="SemiBold"
                           Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,12"
                           FontFamily="{DynamicResource TerminalFont}"/>

                <Button x:Name="BtnResetStations" Content="RESET ALL STATIONS"
                        Click="OnResetAllStations"
                        Style="{DynamicResource DangerButton}"
                        Padding="16,8" HorizontalAlignment="Left"/>
                <TextBlock Text="Clears all mounted tools from every station."
                           FontSize="11" Foreground="{DynamicResource TextMutedBrush}"
                           Margin="0,6,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
