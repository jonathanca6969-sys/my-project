<Page x:Class="TurretApp.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource BgBrush}">
    <Grid Margin="40,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header - matching original HTML styling -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,10,0,20">
            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,2" Padding="0,0,0,16">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="&#x2593;&#x2593;&#x2593;  Buttnutt's  &#x2593;&#x2593;&#x2593;"
                               FontSize="16" Foreground="{StaticResource TextMutedBrush}"
                               HorizontalAlignment="Center" FontWeight="Bold"
                               FontFamily="{StaticResource TerminalFont}"/>
                    <TextBlock Text="TURRET  AND  TOOLING"
                               FontSize="36" FontWeight="Bold"
                               Foreground="{StaticResource AccentBrightBrush}"
                               HorizontalAlignment="Center" Margin="0,6,0,6"
                               FontFamily="{StaticResource TerminalFont}">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#88ffbb" BlurRadius="30" ShadowDepth="0" Opacity="0.6"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="Euromac &amp; Mate Edition  ·  v2.0"
                               FontSize="16" Foreground="{StaticResource TextBrush}"
                               HorizontalAlignment="Center"
                               FontFamily="{StaticResource TerminalFont}">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#55ff88" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- 6 Module Tiles - fills available space -->
        <UniformGrid Grid.Row="1" Columns="3" Rows="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <!-- Die Height -->
            <Button x:Name="CardDieHeight" Click="GoDieHeight" Margin="8" Background="{StaticResource BgSecondaryBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="2" Padding="20" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="&#x2630;" FontSize="48" Foreground="{StaticResource AccentBrightBrush}" HorizontalAlignment="Center" Margin="0,0,0,12">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="#88ffbb" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock Text="DIE HEIGHT" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center" FontFamily="{StaticResource TerminalFont}"/>
                                <TextBlock Text="Shim calc &amp; grind life" FontSize="12" Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center" Margin="0,6,0,0" FontFamily="{StaticResource TerminalFont}"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="Bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#55ff88" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Die Clearance -->
            <Button x:Name="CardClearance" Click="GoClearance" Margin="8" Background="{StaticResource BgSecondaryBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="2" Padding="20" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="◎" FontSize="48" Foreground="{StaticResource AccentBrightBrush}" HorizontalAlignment="Center" Margin="0,0,0,12">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="#88ffbb" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock Text="DIE CLEARANCE" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center" FontFamily="{StaticResource TerminalFont}"/>
                                <TextBlock Text="Textbook vs empirical" FontSize="12" Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center" Margin="0,6,0,0" FontFamily="{StaticResource TerminalFont}"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="Bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#55ff88" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Tonnage -->
            <Button x:Name="CardTonnage" Click="GoTonnage" Margin="8" Background="{StaticResource BgSecondaryBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="2" Padding="20" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="⬢" FontSize="48" Foreground="{StaticResource AccentBrightBrush}" HorizontalAlignment="Center" Margin="0,0,0,12">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="#88ffbb" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock Text="TONNAGE" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center" FontFamily="{StaticResource TerminalFont}"/>
                                <TextBlock Text="Cluster &amp; shear reduction" FontSize="12" Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center" Margin="0,6,0,0" FontFamily="{StaticResource TerminalFont}"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="Bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#55ff88" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- SBR -->
            <Button x:Name="CardSbr" Click="GoSbr" Margin="8" Background="{StaticResource BgSecondaryBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="2" Padding="20" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="↕" FontSize="48" Foreground="{StaticResource AccentBrightBrush}" HorizontalAlignment="Center" Margin="0,0,0,12">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="#88ffbb" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock Text="SBR" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center" FontFamily="{StaticResource TerminalFont}"/>
                                <TextBlock Text="Straight Before Radius" FontSize="12" Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center" Margin="0,6,0,0" FontFamily="{StaticResource TerminalFont}"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="Bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#55ff88" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Tool Library -->
            <Button x:Name="CardToolLib" Click="GoToolLibrary" Margin="8" Background="{StaticResource BgSecondaryBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="2" Padding="20" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="&#x2692;" FontSize="48" Foreground="{StaticResource AccentBrightBrush}" HorizontalAlignment="Center" Margin="0,0,0,12">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="#88ffbb" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock Text="TOOL LIBRARY" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center" FontFamily="{StaticResource TerminalFont}"/>
                                <TextBlock Text="Master inventory" FontSize="12" Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center" Margin="0,6,0,0" FontFamily="{StaticResource TerminalFont}"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="Bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#55ff88" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Turret View -->
            <Button x:Name="CardTurretView" Click="GoTurretView" Margin="8" Background="{StaticResource BgSecondaryBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="2" Padding="20" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="&#x2736;" FontSize="48" Foreground="{StaticResource AccentBrightBrush}" HorizontalAlignment="Center" Margin="0,0,0,12">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="#88ffbb" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock Text="TURRET VIEW" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center" FontFamily="{StaticResource TerminalFont}"/>
                                <TextBlock Text="Station loadout" FontSize="12" Foreground="{StaticResource TextMutedBrush}" HorizontalAlignment="Center" Margin="0,6,0,0" FontFamily="{StaticResource TerminalFont}"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="Bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#55ff88" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </UniformGrid>

        <!-- Footer -->
        <TextBlock Grid.Row="2" HorizontalAlignment="Center" Margin="0,12,0,4"
                   FontSize="11" Foreground="{StaticResource TextMutedBrush}"
                   FontFamily="{StaticResource TerminalFont}"
                   Text="════════════════════════════════════════════════════════════════"/>
    </Grid>
</Page>
